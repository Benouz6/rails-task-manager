<h1><%= @task[:title] %></h1>
<p><%= @task.details %></p>
<p>[ <%= "X" if @task.completed == true %> ] This task is completed</p>
<p><%= link_to "Edit a task", edit_task_path %></p>
<p><%= link_to "Back to list", tasks_path %></p>
<p><%= link_to "Delete", task_path(@task), method: :delete, data: {confirm:"Are you sure?"} %></p>
